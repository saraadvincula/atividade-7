<body>

    <script>
        
        let somaFor = 0;
        for (let i = 1; i <= 100; i++) {
            somaFor += i;
        }
        console.log("A soma dos números de 1 a 100 com o loop for é:", somaFor);

       
        let somaWhile = 0;
        let i = 1;
        while (i <= 100) {
            somaWhile += i;
            i++;
        }
        console.log("A soma dos números de 1 a 100 com o loop while é:", somaWhile);
    </script>
</body>
